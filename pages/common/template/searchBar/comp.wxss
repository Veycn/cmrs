/* pages/comon/template/searchBar/comp.wxss */
.container {
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: space-between;
    padding: 12rpx;
    box-sizing: border-box;
}
.search {
    position: relative;
    width:462rpx;
    height:60rpx;
    background:#4c6ff3;
    box-sizing: border-box;
    border-radius: 30rpx;
    padding-left: 25rpx;
    padding-right: 70rpx;
    color: #fff;
    text-indent: 10rpx;
    font-size: 28rpx;
}
.searchInput {
    line-height: 60rpx;
    height: 58rpx;
}
.icon-wrapper {
    position: absolute;
    top: 13rpx;
    right: 34rpx;
    width: 34rpx;
    height: 34rpx;
    vertical-align: center;
}
.icon-wrapper .img {
    display: inline-block;
    width: 100%;
    height: 100%;
}
.rightBar {
    padding-top: 8rpx;
    box-sizing: border-box;
}
.rightBar .img {
    width: 44rpx;
    height: 44rpx;
    margin-right: 18rpx;
}