/* pages/comon/template/navBar/comp.wxss */
.container {
    display: flex;
}
.sort-wrapper {
    display: inline-block;
}
.sort {
    display: flex;
    flex-direction: row;
    width: 250rpx;
}
.image {
    line-height: 60rpx;
    position: relative;
    margin: 0 15rpx;
    top: 24rpx;
    width: 19rpx;
    height: 11rpx;
}
.text {
    display: block;
    font-size: 32rpx;
    line-height: 60rpx;
}

.nav-wrapper {
    display: inline-block;
    white-space: nowrap;
    width: 500rpx;
}
.nav-wrapper .item{
    font-size: 32rpx;
    margin: 0 25rpx;
    color: #797979;
    line-height: 60rpx;
}
.nav-wrapper .active {
    color: black
}

.dialog {
    position: relative;
    top: 60rpx;
    width: 750rpx;
    height: 1334rpx;
    box-sizing: border-box;
    font-size: 30rpx;
    border: 1px solid #ccc;
}
.mask {
    border: 1px solid #ccc;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 150rpx;
    left: 0;
    background: rgba(0, 0, 0, .1);
}
.method {
    padding-bottom: 30rpx;
}
.content {
    background: #fff;
    padding: 30rpx 80rpx 0;
}

.content.active {
    color: #99e765 !important;
}
